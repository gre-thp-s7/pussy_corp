<header id="header">      
        <div class="navbar navbar-inverse" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href=<%= root_path%>>
                    	<h1><img src="images/logo.png" alt="logo"></h1>
                    </a>
                    
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active"><a href=<%= root_path%> >Home</a></li>

                        <% if user_signed_in? %>
                        <li class="dropdown active"><a href="#">Profil / Log out<i class="fa fa-angle-down"></i></a>
                            <ul role="menu" class="sub-menu">
                                <li><%= link_to "Profil", user_path(current_user.id) %></li>
                                <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"text-danger" %></li>

                            </ul>
                        </li> 
                        <% else %>                      
                        <li class="dropdown active"><a href="#">Sign up / Sign in<i class="fa fa-angle-down"></i></a>
                            <ul role="menu" class="sub-menu">
                                <li><%= link_to "Log in", new_user_session_path %></li>
                                <li><%= link_to "Sign up", new_user_registration_path %></li>
                            </ul>
                        </li>
                        <%end%>                                           
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <!--/#header-->